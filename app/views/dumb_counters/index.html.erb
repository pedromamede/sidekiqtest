<p id="notice"><%= notice %></p>

<h1>Listing Dumb Counters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Started at</th>
      <th>Finished at</th>
      <th>Minutes to finish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dumb_counters.each do |dumb_counter| %>
      <tr>
        <td> ||| <%= dumb_counter.name %> ||| </td>
        <td> ||| <%= dumb_counter.started_at %> ||| </td>
        <td> ||| <%= dumb_counter.finished_at %> ||| </td>
        <td> ||| <%= ((dumb_counter.finished_at - dumb_counter.started_at) /60).to_i %></td>
        <td><%= link_to 'Show', dumb_counter %></td>
        <td><%= link_to 'Edit', edit_dumb_counter_path(dumb_counter) %></td>
        <td><%= link_to 'Destroy', dumb_counter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

